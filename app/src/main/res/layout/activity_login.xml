<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.tugas.hisyam.gymsum.login">

    <EditText
        android:id="@+id/tMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="146dp"
        android:ems="10"
        android:hint="coba@gmail.com"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/tPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tMail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="*****"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/cLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="bLogin"
        android:text="Login"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tMail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        app:srcCompat="@drawable/logo" />
</RelativeLayout>
